---
import CategoryBadge from '../CategoryBadge.astro';

interface Props {
  posts: Array<{
    title: string;
    slug: string;
    excerpt: string;
    category: string;
    categoryColor?: string;
    featured?: boolean;
    viewCount: number;
    publishedAt: string;
    image?: string;
  }>;
}

const { posts, title = 'üî• Articles Populaires', maxPosts = 5 } = Astro.props;

// Sort posts by popularity (views + likes)
const sortedPosts = posts
  .sort((a, b) => (b.views + b.likes) - (a.views + a.likes))
  .slice(0, maxPosts);
---

<section class="py-16 bg-gradient-to-b from-secondary-900 to-secondary-800">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 font-elegant">
        {title}
      </h2>
      <p class="text-secondary-300 max-w-2xl mx-auto">
        D√©couvrez les articles les plus populaires de notre communaut√©, tri√©s par engagement et pertinence
      </p>
    </div>
    
    <!-- Popular Posts Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {sortedPosts.map((post, index) => (
        <article class="group bg-secondary-800/50 border border-secondary-700 rounded-xl overflow-hidden hover:shadow-2xl transition-all duration-500 hover:scale-105 hover:border-primary-500/50">
          <!-- Popularity Badge -->
          <div class="relative">
            <div class={`absolute top-3 left-3 z-10 w-10 h-10 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-lg ${
              index === 0 ? 'bg-gradient-to-br from-yellow-400 to-yellow-600' : 
              index === 1 ? 'bg-gradient-to-br from-gray-400 to-gray-600' : 
              index === 2 ? 'bg-gradient-to-br from-amber-500 to-amber-700' : 
              'bg-gradient-to-br from-secondary-500 to-secondary-700'
            }`}>
              {index === 0 ? 'ü•á' : index === 1 ? 'ü•à' : index === 2 ? 'ü•â' : index + 1}
            </div>
            
            <!-- Category Badge -->
            <div class="absolute top-3 right-3 z-10">
              <CategoryBadge name={post.category} color={post.categoryColor} size="sm" />
            </div>
            
            <!-- Featured Badge -->
            {post.featured && (
              <div class="absolute top-12 right-3 z-10">
                <span class="px-2 py-1 bg-yellow-500/20 text-yellow-300 rounded-full text-xs font-medium border border-yellow-500/30 backdrop-blur-sm">
                  ‚≠ê √Ä la une
                </span>
              </div>
            )}
            
            <!-- Article Image -->
            <div class="h-48 bg-gradient-to-br from-primary-800/30 to-secondary-800/30 overflow-hidden">
              {post.image ? (
                <img 
                  src={post.image} 
                  alt={post.imageAlt || post.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center">
                  <span class="text-4xl opacity-60">{post.isExplicit ? 'üî•' : 'üíã'}</span>
                </div>
              )}
            </div>
          </div>
          
          <!-- Content -->
          <div class="p-6">
            <h3 class="text-xl font-bold text-white mb-3 group-hover:text-primary-400 transition-colors line-clamp-2">
              <a href={`/blog/${post.slug}`} class="hover:underline">
                {post.title}
              </a>
            </h3>
            
            <p class="text-secondary-300 text-sm mb-4 line-clamp-2 leading-relaxed">
              {post.excerpt}
            </p>
            
            <!-- Post Meta -->
            <div class="flex items-center justify-between text-sm text-secondary-400 mb-4">
              <div class="flex items-center gap-3">
                <span>üë§ {post.author}</span>
                <span>üìÖ {new Date(post.publishedAt).toLocaleDateString('fr-FR', { month: 'short', day: 'numeric' })}</span>
              </div>
              <span>‚è±Ô∏è {post.readTime}</span>
            </div>
            
            <!-- Engagement Stats -->
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4 text-sm">
                <span class="flex items-center gap-1 text-secondary-300">
                  üëÅÔ∏è {post.views.toLocaleString('fr-FR')}
                </span>
                <span class="flex items-center gap-1 text-secondary-300">
                  ‚ù§Ô∏è {post.likes.toLocaleString('fr-FR')}
                </span>
              </div>
              
              <a 
                href={`/blog/${post.slug}`}
                class="px-4 py-2 bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 text-white text-sm font-medium rounded-lg transition-all duration-300 hover:scale-105"
              >
                Lire ‚Üí
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
    
    <!-- View All Button -->
    <div class="text-center">
      <a 
        href="/blog" 
        class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-primary-600 to-primary-700 hover:from-primary-700 hover:to-primary-800 text-white font-semibold rounded-xl transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl"
      >
        üìö Voir Tous les Articles
        <span class="text-lg">‚Üí</span>
      </a>
    </div>
  </div>
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

