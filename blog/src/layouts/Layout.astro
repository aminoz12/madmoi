export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
  canonicalURL?: string;
  ogImage?: string;
  twitterImage?: string;
  locale?: string;
  alternateLocales?: string[];
}

const {
  title,
  description = 'Blog mature et sophistiqué sur l\'exploration érotique et le bien-être sexuel',
  image = '/images/og-default.jpg',
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
  tags = [],
  canonicalURL,
  ogImage,
  twitterImage,
  locale = 'fr',
  alternateLocales = ['en', 'de']
} = Astro.props;

const siteTitle = title === 'Mad2Moi Blog - Exploration Érotique & Bien-être' ? title : `${title} | Mad2Moi Blog`;
const siteURL = Astro.site || 'https://mad2moi-blog.com';
const fullImageURL = image.startsWith('http') ? image : `${siteURL}${image}`;
const canonical = canonicalURL || `${siteURL}${Astro.url.pathname}`;

// Enhanced image URLs for social media
const ogImageURL = ogImage ? (ogImage.startsWith('http') ? ogImage : `${siteURL}${ogImage}`) : fullImageURL;
const twitterImageURL = twitterImage ? (twitterImage.startsWith('http') ? twitterImage : `${siteURL}${twitterImage}`) : fullImageURL;

// Viral, engaging descriptions for social media
const viralDescription = description.includes('Blog mature') 
  ? '🚀 Découvrez l\'univers fascinant de l\'exploration érotique ! 💋 Conseils experts, guides pratiques et témoignages authentiques pour une vie sexuelle épanouie ✨' 
  : description;
