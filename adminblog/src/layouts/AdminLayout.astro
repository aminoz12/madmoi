  <script src="/scripts/role-control.js" is:inline></script>
  <script>
    // Session validation and authentication check
    document.addEventListener('DOMContentLoaded', async function() {
      // Check if user is authenticated
      const sessionId = localStorage.getItem('sessionId');
      if (!sessionId) {
        console.log('❌ No session found, redirecting to login');
        window.location.href = '/';
        return;
      }
      
      try {
        // Validate session with server
        const response = await fetch(`/api/session?sessionId=${sessionId}`);
        if (!response.ok) {
          console.log('❌ Session invalid, redirecting to login');
          localStorage.clear();
          window.location.href = '/';
          return;
        }
        
        const sessionData = await response.json();
        console.log('✅ Session validated:', sessionData);
        
        // Set current user info
        const currentUser = sessionData.username || 'Admin';
        const currentUserElement = document.getElementById('currentUser');
        const currentUserInitial = document.getElementById('currentUserInitial');
        
        if (currentUserElement) currentUserElement.textContent = `Bienvenue, ${currentUser}`;
        if (currentUserInitial) currentUserInitial.textContent = currentUser.charAt(0).toUpperCase();
        
      } catch (error) {
        console.error('❌ Session validation failed:', error);
        localStorage.clear();
        window.location.href = '/';
        return;
      }
      
      // Dark mode functionality
      let isDarkMode = false;
      const html = document.documentElement;
      const modeToggle = document.getElementById('modeToggle');
      const sunIcon = document.getElementById('sunIcon');
      const moonIcon = document.getElementById('moonIcon');

      function toggleMode() {
        isDarkMode = !isDarkMode;
        
        if (isDarkMode) {
          html.classList.add('dark');
          sunIcon.classList.remove('hidden');
          moonIcon.classList.add('hidden');
        } else {
          html.classList.remove('dark');
          moonIcon.classList.remove('hidden');
          sunIcon.classList.add('hidden');
        }
      }

      // Start with dark mode by default
      isDarkMode = true;
      html.classList.add('dark');
      sunIcon.classList.remove('hidden');
      moonIcon.classList.add('hidden');

      modeToggle.addEventListener('click', toggleMode);

      // Enhanced logout functionality
      document.getElementById('logoutBtn').addEventListener('click', async function() {
        // Add loading state
        this.innerHTML = '<svg class="animate-spin w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Déconnexion...';
        this.disabled = true;
        
        try {
          // Destroy session on server
          await fetch(`/api/session?sessionId=${sessionId}`, {
            method: 'DELETE'
          });
        } catch (error) {
          console.error('❌ Failed to destroy session:', error);
        }
        
        // Clear session data
        localStorage.clear();
        
        // Redirect to login
        window.location.href = '/';
      });

      // Add active state to current nav item
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll('nav a');
      
      navItems.forEach(item => {
        if (item.getAttribute('href') === currentPath) {
          item.classList.add('bg-blue-100', 'dark:bg-blue-900/40', 'text-blue-900', 'dark:text-blue-100', 'border-blue-300', 'dark:border-blue-500');
          item.classList.remove('bg-white/80', 'dark:bg-gray-800/60', 'text-gray-800', 'dark:text-gray-200', 'border-gray-200/50', 'dark:border-gray-600/50');
        }
      });
    });
  </script>
</body>
</html>

