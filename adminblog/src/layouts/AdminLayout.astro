---
export interface Props {
  title: string;
  description?: string;
}

import '../styles/global.css';
import EnvMeta from '../components/EnvMeta.astro';

const { title, description = "Tableau de Bord Admin Blog Mad2Moi" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr" class="h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <!-- Environment variables for frontend -->
  <EnvMeta />
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <style>
    body { font-family: 'Inter', sans-serif; }
    .glass-effect { backdrop-filter: blur(20px); background: rgba(255, 255, 255, 0.9); }
    .glass-effect-dark { backdrop-filter: blur(20px); background: rgba(15, 23, 42, 0.9); }
    .card-hover { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
    .card-hover:hover { transform: translateY(-4px); box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); }
    .card-hover-dark:hover { transform: translateY(-4px); box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.2), 0 10px 10px -5px rgba(147, 51, 234, 0.1); }
    .nav-item { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
    .nav-item:hover { transform: translateX(8px); }
    .gradient-text { background: linear-gradient(135deg, #3b82f6, #8b5cf6, #06b6d4); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; }
    .gradient-text-dark { background: linear-gradient(135deg, #60a5fa, #a78bfa, #22d3ee); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; }
    .mode-transition { transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1); }
  </style>
</head>
<body class="h-full font-inter mode-transition">
  <div class="min-h-full bg-gradient-to-br from-gray-50 to-blue-50 dark:from-gray-900 dark:to-slate-800">
    <!-- Enhanced Header -->
    <header class="bg-gradient-to-r from-white to-gray-50 dark:from-gray-900 dark:to-slate-800 shadow-lg border-b border-gray-200/50 dark:border-gray-700/50 backdrop-blur-xl mode-transition">
      <div class="flex items-center justify-between px-6 py-5 lg:px-8">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-gradient-to-br from-blue-600 via-purple-600 to-cyan-600 rounded-2xl flex items-center justify-center shadow-lg overflow-hidden">
            <img src="/logo.png" alt="Logo Mad2Moi" class="w-8 h-8 object-contain">
          </div>
          <div>
            <h1 class="text-2xl font-bold gradient-text dark:gradient-text-dark">Mad2Moi Admin</h1>
            <p class="text-sm text-gray-600 dark:text-gray-300">Tableau de Bord Professionnel</p>
          </div>
        </div>
        
        <div class="flex items-center space-x-6">
          <!-- Dark Mode Toggle -->
          <button id="modeToggle" class="relative p-3 bg-gray-100 dark:bg-gray-800 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-700 transition-all duration-300 group shadow-lg">
            <!-- Sun Icon (Light Mode) -->
            <svg id="sunIcon" class="w-5 h-5 text-yellow-500 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <!-- Moon Icon (Dark Mode) -->
            <svg id="moonIcon" class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
            </svg>
          </button>

          <!-- User Info -->
          <div class="flex items-center space-x-3 bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm px-4 py-2 rounded-xl border border-gray-200/50 dark:border-gray-600/50">
            <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full flex items-center justify-center">
              <span id="currentUserInitial" class="text-white font-semibold text-sm"></span>
            </div>
            <div class="hidden md:block">
              <p id="currentUser" class="text-sm font-medium text-gray-700 dark:text-gray-200"></p>
              <p class="text-xs text-gray-500 dark:text-gray-400">Administrateur</p>
            </div>
          </div>
          
          <!-- Enhanced Logout Button -->
          <button id="logoutBtn" class="bg-gradient-to-r from-red-500 to-pink-500 text-white px-6 py-2.5 rounded-xl hover:from-red-600 hover:to-pink-600 transition-all duration-300 text-sm font-semibold shadow-lg hover:shadow-xl transform hover:scale-105 active:scale-95 flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
