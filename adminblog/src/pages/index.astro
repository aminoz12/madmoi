---
// Premium Login page with modern design and dark/light mode toggle
import '../styles/global.css';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion Admin - Mad2Moi</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; }
        .glass-effect { backdrop-filter: blur(25px); background: rgba(15, 23, 42, 0.85); }
        .glass-effect-light { backdrop-filter: blur(25px); background: rgba(255, 255, 255, 0.15); }
        .gradient-bg-dark { background: linear-gradient(135deg, #0f172a 0%, #1e293b 20%, #334155 40%, #475569 60%, #64748b 80%, #94a3b8 100%); }
        .gradient-bg-light { background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 20%, #cbd5e1 40%, #94a3b8 60%, #64748b 80%, #475569 100%); }
        .shadow-glow-dark { box-shadow: 0 0 60px rgba(59, 130, 246, 0.4), 0 0 120px rgba(147, 51, 234, 0.2); }
        .shadow-glow-light { box-shadow: 0 0 60px rgba(102, 126, 234, 0.4), 0 0 120px rgba(147, 51, 234, 0.2); }
        .mode-transition { transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1); }
        .input-glow { box-shadow: 0 0 20px rgba(59, 130, 246, 0.3); }
        .button-glow { box-shadow: 0 0 30px rgba(59, 130, 246, 0.5); }
        
        /* Custom scrollbar */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: rgba(255, 255, 255, 0.1); border-radius: 4px; }
        ::-webkit-scrollbar-thumb { background: rgba(255, 255, 255, 0.3); border-radius: 4px; }
        ::-webkit-scrollbar-thumb:hover { background: rgba(255, 255, 255, 0.5); }
        
        /* Floating animation */
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        .float-animation { animation: float 6s ease-in-out infinite; }
        
        /* Pulse animation */
        @keyframes pulse-glow {
            0%, 100% { opacity: 0.5; transform: scale(1); }
            50% { opacity: 0.8; transform: scale(1.05); }
        }
        .pulse-glow { animation: pulse-glow 4s ease-in-out infinite; }
        
        /* Responsive height adjustments */
        @media (max-height: 700px) {
            .responsive-container {
                margin-top: 0;
                margin-bottom: 0;
            }
            .responsive-logo {
                margin-bottom: 1rem;
            }
            .responsive-form {
                padding: 1rem;
            }
            .responsive-spacing {
                margin-top: 0.5rem;
                margin-bottom: 0.5rem;
            }
        }
        
        @media (max-height: 600px) {
            .responsive-logo {
                margin-bottom: 0.5rem;
            }
            .responsive-form {
                padding: 0.75rem;
            }
            .responsive-spacing {
                margin-top: 0.25rem;
                margin-bottom: 0.25rem;
            }
        }
        
        /* Ensure no overflow */
        html, body {
            overflow: hidden;
            height: 100vh;
        }
        
        /* Compact layout for small screens */
        .compact-layout {
            max-height: 100vh;
            overflow: hidden;
        }
        
        /* Additional responsive adjustments */
        @media (max-height: 800px) {
            .responsive-logo {
                margin-bottom: 1.5rem;
            }
            .responsive-form {
                padding: 1.5rem;
            }
            .responsive-spacing {
                margin-top: 0.75rem;
                margin-bottom: 0.75rem;
            }
        }
        
        @media (max-height: 650px) {
            .responsive-logo {
                margin-bottom: 1rem;
            }
            .responsive-form {
                padding: 1rem;
            }
            .responsive-spacing {
                margin-top: 0.5rem;
                margin-bottom: 0.5rem;
            }
            .responsive-logo h1 {
                font-size: 2.5rem;
            }
            .responsive-logo p {
                font-size: 0.875rem;
            }
        }
        
        @media (max-height: 550px) {
            .responsive-logo {
                margin-bottom: 0.5rem;
            }
            .responsive-form {
                padding: 0.75rem;
            }
            .responsive-spacing {
                margin-top: 0.25rem;
                margin-bottom: 0.25rem;
            }
            .responsive-logo h1 {
                font-size: 2rem;
            }
            .responsive-logo p {
                font-size: 0.75rem;
            }
            .responsive-logo .w-24 {
                width: 4rem;
                height: 4rem;
            }
            .responsive-logo .w-16 {
                width: 2.5rem;
                height: 2.5rem;
            }
        }
        
        /* Ensure form fits in viewport */
        .responsive-form {
            max-height: calc(100vh - 300px);
            overflow-y: auto;
        }
        
        /* Hide scrollbar but keep functionality */
        .responsive-form::-webkit-scrollbar {
            display: none;
        }
        
        .responsive-form {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
    </style>
</head>
<body class="min-h-screen gradient-bg-dark mode-transition flex items-center justify-center p-4 overflow-hidden compact-layout" id="body">
    <!-- Enhanced Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute -top-40 -right-40 w-96 h-96 bg-gradient-to-br from-blue-600/30 to-cyan-600/30 rounded-full mix-blend-multiply filter blur-3xl opacity-70 float-animation"></div>
        <div class="absolute -bottom-40 -left-40 w-96 h-96 bg-gradient-to-br from-purple-600/30 to-pink-600/30 rounded-full mix-blend-multiply filter blur-3xl opacity-70 float-animation" style="animation-delay: -2s;"></div>
        <div class="absolute top-40 left-40 w-80 h-80 bg-gradient-to-br from-indigo-600/30 to-blue-600/30 rounded-full mix-blend-multiply filter blur-3xl opacity-60 float-animation" style="animation-delay: -4s;"></div>
        <div class="absolute top-1/2 right-1/4 w-72 h-72 bg-gradient-to-br from-cyan-600/30 to-teal-600/30 rounded-full mix-blend-multiply filter blur-3xl opacity-50 float-animation" style="animation-delay: -1s;"></div>
        
        <!-- Grid Pattern -->
        <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:50px_50px]"></div>
    </div>

    <!-- Enhanced Mode Toggle Button -->
    <div class="absolute top-6 right-6 z-30">
        <button id="modeToggle" class="relative p-3 bg-gray-800/60 backdrop-blur-xl border border-gray-700/50 rounded-xl hover:bg-gray-700/80 transition-all duration-500 group shadow-lg hover:shadow-xl">
            <!-- Sun Icon (Light Mode) -->
            <svg id="sunIcon" class="w-6 h-6 text-yellow-400 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <!-- Moon Icon (Dark Mode) -->
            <svg id="moonIcon" class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
            </svg>
            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-purple-500/20 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
        </button>
    </div>

    <!-- Main Login Container -->
    <div class="relative z-20 w-full max-w-lg max-h-screen responsive-container">
        <!-- Enhanced Logo Section -->
        <div class="text-center mb-6 responsive-logo">
            <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-blue-600 via-purple-600 to-cyan-600 rounded-2xl shadow-glow-dark mb-4 group hover:scale-110 transition-all duration-500 overflow-hidden relative">
                <img src="/logo.png" alt="Mad2Moi Logo" class="w-16 h-16 object-contain relative z-10">
                <div class="absolute inset-0 bg-gradient-to-r from-blue-400/30 to-purple-400/30 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 to-purple-500/20 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-pulse"></div>
            </div>
            <h1 class="text-4xl font-black text-white mb-2 tracking-tight bg-gradient-to-r from-blue-400 via-purple-400 to-cyan-400 bg-clip-text text-transparent">Mad2Moi</h1>
            <p class="text-gray-300 text-lg font-medium">Tableau de Bord Admin</p>
            <div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto mt-2 rounded-full"></div>
        </div>

        <!-- Enhanced Login Form -->
        <div class="glass-effect rounded-2xl p-6 shadow-glow-dark border border-gray-700/50 backdrop-blur-xl relative overflow-hidden responsive-form">
            <!-- Form Background Pattern -->
            <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-purple-500/5 opacity-50"></div>
            <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-blue-500/10 to-transparent rounded-full blur-3xl"></div>
            
            <div class="relative z-10">
                <div class="mb-6 text-center responsive-spacing">
                    <p class="text-gray-400 text-base">Connectez-vous pour accéder à votre tableau de bord</p>
                </div>

                <form id="loginForm" class="space-y-5">
                    <!-- Enhanced Username Field -->
                    <div class="space-y-2">
                        <label for="username" class="block text-base font-semibold text-gray-200">
                            Nom d'utilisateur
                        </label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none z-10">
                                <svg class="h-5 w-5 text-gray-400 group-focus-within:text-blue-400 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <input 
                                type="text" 
                                id="username" 
                                name="username" 
                                required
                                class="relative z-20 w-full pl-12 pr-4 py-3 bg-gray-800/60 border-2 border-gray-600/50 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-500/30 focus:border-blue-500 transition-all duration-500 hover:border-gray-500/50 text-base"
                                placeholder="Entrez votre nom d'utilisateur"
                            >
                            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-purple-500/10 rounded-xl opacity-0 group-focus-within:opacity-100 transition-opacity duration-500"></div>
                        </div>
                    </div>

                    <!-- Enhanced Password Field -->
                    <div class="space-y-2">
                        <label for="password" class="block text-base font-semibold text-gray-200">
                            Mot de passe
                        </label>
                        <div class="relative group">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none z-10">
                                <svg class="h-5 w-5 text-gray-400 group-focus-within:text-blue-400 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                            </div>
                            <input 
                                type="password" 
                                id="password" 
                                name="password" 
                                required
                                class="relative z-20 w-full pl-12 pr-4 py-3 bg-gray-800/60 border-2 border-gray-600/50 rounded-xl text-white placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-500/30 focus:border-blue-500 transition-all duration-500 hover:border-gray-500/50 text-base"
                                placeholder="Entrez votre mot de passe"
                            >
                            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-purple-500/10 rounded-xl opacity-0 group-focus-within:opacity-100 transition-opacity duration-500"></div>
                        </div>
                    </div>

                    <!-- Enhanced Submit Button -->
                    <button 
                        type="submit" 
                        class="w-full bg-gradient-to-r from-blue-600 via-purple-600 to-cyan-600 text-white py-3 px-6 rounded-xl font-bold text-lg hover:from-blue-700 hover:via-purple-700 hover:to-cyan-700 focus:outline-none focus:ring-4 focus:ring-blue-500/30 focus:ring-offset-4 focus:ring-offset-gray-900 transition-all duration-500 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg button-glow hover:shadow-2xl relative overflow-hidden group"
                    >
                        <span class="relative z-10 flex items-center justify-center">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                            </svg>
                            Se Connecter
                        </span>
                        <div class="absolute inset-0 bg-gradient-to-r from-blue-400/20 to-purple-400/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    </button>
                </form>

                <!-- Enhanced Error Message -->
                <div id="errorMessage" class="mt-4 p-3 bg-red-500/20 border-2 border-red-500/30 rounded-xl text-red-300 text-center text-base hidden backdrop-blur-xl"></div>

                <!-- Enhanced Footer -->
                <div class="mt-6 text-center responsive-spacing">
                    <p class="text-gray-400 text-sm">
                        🔒 Accès sécurisé à votre panneau d'administration
                    </p>
                </div>
            </div>
        </div>

        <!-- Enhanced Additional Info -->
        <div class="text-center mt-4 responsive-spacing">
            <p class="text-gray-500 text-sm">
                © 2024 Mad2Moi. All rights reserved.
            </p>
        </div>
    </div>

    <script>
        // Authentication handled server-side via /api/session

        // Enhanced Dark/Light mode functionality
        let isDarkMode = true;
        const body = document.getElementById('body');
        const modeToggle = document.getElementById('modeToggle');
        const sunIcon = document.getElementById('sunIcon');
        const moonIcon = document.getElementById('moonIcon');

        function toggleMode() {
            isDarkMode = !isDarkMode;
            
            if (isDarkMode) {
                // Switch to Dark Mode
                body.className = 'min-h-screen gradient-bg-dark mode-transition flex items-center justify-center p-4 overflow-hidden';
                sunIcon.classList.add('hidden');
                moonIcon.classList.remove('hidden');
            } else {
                // Switch to Light Mode
                body.className = 'min-h-screen gradient-bg-light mode-transition flex items-center justify-center p-4 overflow-hidden';
                moonIcon.classList.add('hidden');
                sunIcon.classList.remove('hidden');
            }
        }

        // Start with dark mode by default
        toggleMode(); // This will set dark mode

        modeToggle.addEventListener('click', toggleMode);

        // Enhanced Login form functionality
        document.getElementById('loginForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            console.log('🚀 Login form submitted - Starting authentication process...');
            
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const errorMessage = document.getElementById('errorMessage');
            const submitBtn = document.querySelector('button[type="submit"]');
            
            console.log('📝 Form data:', { username, password: '***' });
            
            // Show loading state
            submitBtn.innerHTML = '<span class="relative z-10 flex items-center justify-center"><svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Connexion...</span>';
            submitBtn.disabled = true;
            
            // Hide previous error
            errorMessage.classList.add('hidden');
            
            // Simulate a small delay for better UX
            setTimeout(async () => {
                try {
                    console.log('🔍 Checking credentials...');
                    
                    try {
                        const response = await fetch('/api/session', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ username, password })
                        });
                        if (!response.ok) {
                            throw new Error('Nom d\'utilisateur ou mot de passe invalide');
                        }
                        const sessionData = await response.json();
                        localStorage.setItem('sessionId', sessionData.sessionId);
                        localStorage.setItem('adminUser', sessionData.user?.username || username);
                        localStorage.setItem('adminRole', sessionData.user?.role || 'author');
                        localStorage.setItem('adminLoggedIn', 'true');
                        submitBtn.innerHTML = '<span class="relative z-10 flex items-center justify-center"><svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg> Succès !</span>';
                        submitBtn.className = 'w-full bg-gradient-to-r from-green-600 via-emerald-600 to-teal-600 text-white py-3 px-6 rounded-xl font-bold text-lg transition-all duration-500 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg relative overflow-hidden group';
                        setTimeout(() => {
                            const userRole = sessionData.user?.role;
                            if (userRole === 'admin') {
                                window.location.href = '/admin/dashboard';
                            } else {
                                window.location.href = '/admin/articles';
                            }
                        }, 800);
                    } catch (err) {
                        errorMessage.textContent = err.message || 'Erreur de connexion';
                        errorMessage.classList.remove('hidden');
                        submitBtn.innerHTML = '<span class="relative z-10 flex items-center justify-center"><svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path></svg> Se Connecter</span>';
                        submitBtn.disabled = false;
                        submitBtn.className = 'w-full bg-gradient-to-r from-blue-600 via-purple-600 to-cyan-600 text-white py-3 px-6 rounded-xl font-bold text-lg hover:from-blue-700 hover:via-purple-700 hover:to-cyan-700 focus:outline-none focus:ring-4 focus:ring-blue-500/30 focus:ring-offset-4 focus:ring-offset-gray-900 transition-all duration-500 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg button-glow hover:shadow-2xl relative overflow-hidden group';
                        document.getElementById('password').value = '';
                        errorMessage.classList.add('animate-pulse');
                        setTimeout(() => errorMessage.classList.remove('animate-pulse'), 1200);
                    }
                } catch (error) {
                    console.error('💥 Error during login process:', error);
                    errorMessage.textContent = 'Erreur lors de la connexion: ' + error.message;
                    errorMessage.classList.remove('hidden');
                    
                    // Reset button on error
                    submitBtn.innerHTML = '<span class="relative z-10 flex items-center justify-center"><svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path></svg> Se Connecter</span>';
                    submitBtn.disabled = false;
                    submitBtn.className = 'w-full bg-gradient-to-r from-blue-600 via-purple-600 to-cyan-600 text-white py-3 px-6 rounded-xl font-bold text-lg hover:from-blue-700 hover:via-purple-700 hover:to-cyan-700 focus:outline-none focus:ring-4 focus:ring-blue-500/30 focus:ring-offset-4 focus:ring-offset-gray-900 transition-all duration-500 transform hover:scale-[1.02] active:scale-[0.98] shadow-lg button-glow hover:shadow-2xl relative overflow-hidden group';
                }
            }, 1200);
        });

        // Enhanced floating animation to background elements
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 Login page loaded successfully');
            console.log('🌐 Current URL:', window.location.href);
            console.log('🔧 User agent:', navigator.userAgent);
            
                    // Session management will be implemented with proper backend
        console.log('✅ Admin session established');
            
            const floatingElements = document.querySelectorAll('.float-animation');
            floatingElements.forEach((el, index) => {
                el.style.animationDelay = `${index * 2}s`;
            });
        });
    </script>
</body>
</html>

