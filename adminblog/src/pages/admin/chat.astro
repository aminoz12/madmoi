---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Chat Support - Mad2Moi Admin">
  <!-- Page Header -->
  <div class="mb-8 ">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">Support Chat</h1>
        <p class="text-lg text-gray-600 dark:text-gray-300">G√©rez les conversations en temps r√©el avec l'aide de GPT-5</p>
      </div>
      <div class="flex items-center space-x-4">
        <!-- Admin Availability Toggle -->
        <div class="flex items-center space-x-3">
          <label class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" id="adminAvailabilityToggle" class="sr-only peer">
            <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
            <span class="ml-3 text-sm font-medium text-gray-900 dark:text-gray-300">Support Disponible</span>
          </label>
        </div>
        
        <!-- Status Indicators -->
        <div class="flex items-center space-x-4">
          <div class="flex items-center space-x-2">
            <div id="adminStatusIndicator" class="w-3 h-3 bg-red-500 rounded-full"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">Admin: Hors ligne</span>
          </div>
          <div class="flex items-center space-x-2">
            <div id="gptStatusIndicator" class="w-3 h-3 bg-yellow-500 rounded-full"></div>
            <span class="text-sm text-gray-600 dark:text-gray-400">GPT-5: V√©rification...</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Chat Interface -->
  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 h-[calc(100vh-200px)]">
    <!-- Conversations List -->
    <div class="lg:col-span-1 bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700">
      <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Conversations</h3>
        <div class="mt-3">
          <input type="text" id="searchConversations" placeholder="Rechercher..." class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white text-sm">
        </div>
      </div>
      
      <div
  id="conversationsContainer"
  class="max-h-96 overflow-y-auto pr-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-md"
>
</div>

    </div>

    <!-- Chat Area -->
    <div class="lg:col-span-3 overflow-y-auto h-full   bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 flex flex-col">
      <!-- Chat Header -->
      <div id="chatHeader" class="p-4 border-b border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
          <div>
            <h3 id="currentUserName" class="text-lg font-semibold text-gray-900 dark:text-white">S√©lectionnez une conversation</h3>
            <p id="currentUserInfo" class="text-sm text-gray-600 dark:text-gray-400">Cliquez sur une conversation pour commencer</p>
          </div>
          <div class="flex items-center space-x-2">
            <span id="userStatus" class="text-sm text-gray-500 dark:text-gray-400"></span>
          </div>
        </div>
      </div>

      <!-- Messages Area -->
      <div id="messagesContainer" class="flex-1 overflow-y-auto p-4   space-y-4">
        <div class="text-center text-gray-500 dark:text-gray-400 py-8">
          S√©lectionnez une conversation pour voir les messages
        </div>
      </div>

      <!-- GPT-5 Suggestion Panel (hidden by default) -->
      <div id="gptSuggestionPanel" class="hidden p-4 border-t border-gray-200 dark:border-gray-700 bg-blue-50 dark:bg-blue-900/20">
        <div class="mb-3">
          <h4 class="text-sm font-medium text-blue-900 dark:text-blue-100">Suggestion GPT-5</h4>
          <p class="text-xs text-blue-700 dark:text-blue-300">Modifiez la r√©ponse si n√©cessaire avant de l'envoyer</p>
        </div>
        <div class="flex space-x-2">
          <textarea id="gptSuggestionText" class="flex-1 px-3 py-2 border border-blue-300 dark:border-blue-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white text-sm resize-none" rows="3" placeholder="Suggestion GPT-5..."></textarea>
          <div class="flex flex-col space-y-2">
            <button id="approveGptBtn" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm transition-colors">
              Approuver
            </button>
            <button id="editGptBtn" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm transition-colors">
              Modifier
            </button>
            <button id="rejectGptBtn" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm transition-colors">
              Rejeter
            </button>
          </div>
        </div>
      </div>

      <!-- Message Input -->
      <div class="p-4 border-t border-gray-200 dark:border-gray-700">
        <div class="flex items-center space-x-3">
          <!-- Emoji Picker -->
          <button id="emojiPickerBtn" class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" title="Emojis">
            üòä
          </button>
          
          <!-- Attachment Button -->
          <button id="attachmentBtn" class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" title="Pi√®ce jointe">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828L18 9.828a2 2 0 002.828-2.828l-6.586-6.586a2 2 0 00-2.828 2.828L15.172 7z"></path>
            </svg>
          </button>
          
          <!-- Image Button -->
          <button id="imageBtn" class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg transition-colors" title="Image">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </button>
          
          <!-- Message Input -->
          <div class="flex-1">
            <input type="text" id="messageInput" placeholder="Tapez votre r√©ponse..." class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" disabled>
          </div>
          
          <!-- GPT-5 Response Button -->
          <button id="gptResponseBtn" class="bg-green-600 hover:bg-green-700 text-white p-2 rounded-lg transition-colors" title="G√©n√©rer une r√©ponse AI avec GPT-5" disabled>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </button>
          
          <!-- Send Button -->
          <button id="sendButton" class="bg-blue-600 hover:bg-blue-700 text-white p-2 rounded-lg transition-colors" disabled>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
          </button>
        </div>
        
        <!-- Typing Indicator -->
        <div id="typingIndicator" class="hidden mt-2 text-sm text-gray-500 dark:text-gray-400">
          <span class="inline-block animate-pulse">L'utilisateur tape...</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Notification Toast -->
  <div id="notificationToast" class="fixed top-4 right-4 bg-blue-600 text-white px-6 py-3 rounded-lg shadow-lg transform translate-x-full transition-transform duration-300 z-50">
    <div class="flex items-center space-x-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5z"></path>
      </svg>
      <span id="notificationText">Nouveau message re√ßu</span>
    </div>
  </div>
</AdminLayout>

<!-- Scripts -->
<script src="/scripts/gpt5-service.js" is:inline></script>
<script src="/scripts/admin-chat.js" is:inline></script>


