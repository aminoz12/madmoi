<script>
  // Track and display real last login time
  function updateLastLogin() {
    const lastLoginElement = document.getElementById('lastLogin');
    let lastLogin = localStorage.getItem('lastLogin');
    
    if (!lastLogin) {
      // If no last login stored, set current time as first login
      const now = new Date();
      localStorage.setItem('lastLogin', now.toISOString());
      lastLogin = now.toISOString();
    }
    
    // Format the last login time
    const lastLoginDate = new Date(lastLogin);
    const now = new Date();
    const timeDiff = now - lastLoginDate;
    
    // Format based on how long ago
    let formattedTime;
    if (timeDiff < 60000) { // Less than 1 minute
      formattedTime = "À l'instant";
    } else if (timeDiff < 3600000) { // Less than 1 hour
      const minutes = Math.floor(timeDiff / 60000);
      formattedTime = `Il y a ${minutes} min`;
    } else if (timeDiff < 86400000) { // Less than 1 day
      const hours = Math.floor(timeDiff / 3600000);
      formattedTime = `Il y a ${hours}h`;
    } else if (timeDiff < 604800000) { // Less than 1 week
      const days = Math.floor(timeDiff / 86400000);
      formattedTime = `Il y a ${days}j`;
    } else {
      // More than a week, show full date
      formattedTime = lastLoginDate.toLocaleDateString('fr-FR', {
        day: '2-digit',
        month: '2-digit',
        hour: '2-digit',
        minute: '2-digit'
      });
    }
    
    lastLoginElement.textContent = formattedTime;
  }

  // Update last login display
  updateLastLogin();
  
  // Update every minute to keep "À l'instant" and "Il y a X min" current
  setInterval(updateLastLogin, 60000);
</script>

